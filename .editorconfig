root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_size = 4
insert_final_newline = false

[*.md]
trim_trailing_whitespace = false

[{*.css, *.scss}]
max_line_length = 120

[{package.json,package-lock.json,yarn.lock,eslint.config.mjs,.scss.stylelintrc.json,.stylelintrc}]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{composer.json,composer.lock}]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{constants.ts,constants.tsx}]
max_line_length = 500
